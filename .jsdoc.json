{
    "source": {
        "include": ["src/", "package.json"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "tags": {
        "allowUnknownTags": ["category"] 
    },
    "plugins": ["plugins/markdown", "node_modules/better-docs/category"],

    "opts": {
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "verbose": true,
        "template": "node_modules/better-docs"
    }
}